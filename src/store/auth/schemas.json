{
  "signIn": {
    "schema": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "title": "Email Address"
        },
        "password": {
          "type": "string",
          "title": "Password"
        }
      },
      "required": [
        "email",
        "password"
      ]
    },
    "uiSchema": {
      "password": {
        "ui:widget": "password",
        "ui:placeholder": "password"
      },
      "email": {
        "ui:placeholder": "email address"
      }
    }
  },
  "signUp": {
    "schema": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "title": "Email Address"
        },
        "password": {
          "type": "string",
          "title": "Password",
          "description": "Choose a password with at least 8 characters."
        },
        "password2": {
          "type": "string",
          "title": "re-enter password"
        },
        "location": {
          "description": "Due to Covid restrictions, only in state applicants will be able to attend in person.",
          "type": "string",
          "title": "How will you be joining us?",
          "enum": ["In Person", "Virtually"]
        }
      },
      "required": [
        "email",
        "password",
        "password2",
        "location"
      ]
    },
    "uiSchema": {
      "password": {
        "ui:widget": "password",
        "ui:placeholder": "password"
      },
      "password2": {
        "ui:widget": "password",
        "ui:placeholder": "confirm password"
      },
      "covid-travel": {
        "ui:placeholder": "email address"
      },
      "email": {
        "ui:placeholder": "email address"
      },
      "location": {
        "ui:placeholder": "How will you be joining us?"
      }
    }
  },
  "forgotPassword": {
    "schema": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "title": "email address"
        }
      },
      "required": [
        "email"
      ]
    },
    "uiSchema": {
      "email": {
        "ui:placeholder": "email address"
      }
    }
  },
  "forgotPasswordSubmit": {
    "schema": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "title": "email address"
        },
        "code": {
          "type": "string",
          "title": "code"
        },
        "password": {
          "type": "string",
          "title": "new password"
        },
        "password2": {
          "type": "string",
          "title": "confirm new password"
        }
      },
      "required": [
        "email",
        "code",
        "password",
        "password2"
      ]
    },
    "uiSchema": {
      "email": {
        "ui:placeholder": "email address"
      },
      "code": {
        "ui:placeholder": "code from email"
      },
      "password": {
        "ui:widget": "password",
        "ui:placeholder": "new password"
      },
      "password2": {
        "ui:widget": "password",
        "ui:placeholder": "confirm new password"
      }
    }
  },
  "changePassword": {
    "schema": {
      "type": "object",
      "properties": {
        "password": {
          "type": "string",
          "title": "new password",
          "description": "Password needs to have at least 8 characters."
        },
        "password2": {
          "type": "string",
          "title": "confirm new password"
        }
      },
      "required": [
        "password",
        "password2"
      ]
    },
    "uiSchema": {
      "email": {
        "ui:placeholder": "email address"
      },
      "password": {
        "ui:widget": "password",
        "ui:placeholder": "new password"
      },
      "password2": {
        "ui:widget": "password",
        "ui:placeholder": "confirm new password"
      }
    }
  },
  "validateEmail": {
    "schema": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "title": "Email Address"
        }
      },
      "required": [
        "email"
      ]
    },
    "uiSchema": {
      "email": {
        "ui:placeholder": "email address"
      }
    }
  }
}
