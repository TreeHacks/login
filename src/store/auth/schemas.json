{
  "signIn": {
    "schema": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "title": "Email Address"
        },
        "password": {
          "type": "string",
          "title": "Password"
        }
      },
      "required": [
        "email",
        "password"
      ]
    },
    "uiSchema": {
      "password": {
        "ui:widget": "password",
        "ui:placeholder": "password"
      },
      "email": {
        "ui:placeholder": "email address"
      }
    }
  },
  "signUp": {
    "schema": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "title": "Email Address"
        },
        "password": {
          "type": "string",
          "title": "Password",
          "description": "Choose a password with at least 8 characters."
        },
        "password2": {
          "type": "string",
          "title": "re-enter password"
        },
        "location": {
          "type": "string",
          "title": "Where are you coming from?",
          "enum": ["Outside USA", "Alabama", "Alaska", "American Samoa", "Arizona", "Arkansas", "California", "Colorado", "Connecticut", "Delaware", "District Of Columbia", "Florida", "Georgia", "Guam", "Hawaii", "Idaho", "Illinois", "Indiana", "Iowa", "Kansas", "Kentucky", "Louisiana", "Maine", "Maryland", "Massachusetts", "Michigan", "Minnesota", "Mississippi", "Missouri", "Montana", "Nebraska", "Nevada", "New Hampshire", "New Jersey", "New Mexico", "New York", "North Carolina", "North Dakota", "Ohio", "Oklahoma", "Oregon", "Pennsylvania", "Rhode Island", "South Carolina", "South Dakota", "Tennessee", "Texas", "Utah", "Vermont", "Virginia", "Washington", "West Virginia", "Wisconsin", "Wyoming", "US Territories"]
        }
      },
      "required": [
        "email",
        "password",
        "password2",
        "location"
      ]
    },
    "uiSchema": {
      "password": {
        "ui:widget": "password",
        "ui:placeholder": "password"
      },
      "password2": {
        "ui:widget": "password",
        "ui:placeholder": "confirm password"
      },
      "email": {
        "ui:placeholder": "email address"
      },
      "location": {
        "ui:placeholder": "I'm from..."
      }
    }
  },
  "forgotPassword": {
    "schema": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "title": "email address"
        }
      },
      "required": [
        "email"
      ]
    },
    "uiSchema": {
      "email": {
        "ui:placeholder": "email address"
      }
    }
  },
  "forgotPasswordSubmit": {
    "schema": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "title": "email address"
        },
        "code": {
          "type": "string",
          "title": "code"
        },
        "password": {
          "type": "string",
          "title": "new password"
        },
        "password2": {
          "type": "string",
          "title": "confirm new password"
        }
      },
      "required": [
        "email",
        "code",
        "password",
        "password2"
      ]
    },
    "uiSchema": {
      "email": {
        "ui:placeholder": "email address"
      },
      "code": {
        "ui:placeholder": "code from email"
      },
      "password": {
        "ui:widget": "password",
        "ui:placeholder": "new password"
      },
      "password2": {
        "ui:widget": "password",
        "ui:placeholder": "confirm new password"
      }
    }
  },
  "changePassword": {
    "schema": {
      "type": "object",
      "properties": {
        "password": {
          "type": "string",
          "title": "new password",
          "description": "Password needs to have at least 8 characters."
        },
        "password2": {
          "type": "string",
          "title": "confirm new password"
        }
      },
      "required": [
        "password",
        "password2"
      ]
    },
    "uiSchema": {
      "email": {
        "ui:placeholder": "email address"
      },
      "password": {
        "ui:widget": "password",
        "ui:placeholder": "new password"
      },
      "password2": {
        "ui:widget": "password",
        "ui:placeholder": "confirm new password"
      }
    }
  },
  "validateEmail": {
    "schema": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "title": "Email Address"
        }
      },
      "required": [
        "email"
      ]
    },
    "uiSchema": {
      "email": {
        "ui:placeholder": "email address"
      }
    }
  }
}
